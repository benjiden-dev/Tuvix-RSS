{
  "name": "@tuvixrss/api",
  "version": "0.1.0",
  "type": "module",
  "description": "TuvixRSS tRPC API - Portable TypeScript backend for Docker and Cloudflare Workers",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsx watch --env-file=.env --env-file=../../.env src/entries/node.ts",
    "dev:workers": "wrangler dev --persist-to .wrangler/state",
    "build": "tsup",
    "build:tsc": "tsc",
    "start": "node dist/entries/node.js",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "drizzle-kit migrate",
    "db:migrate:d1": "bash scripts/migrate-d1.sh",
    "db:migrate:d1:local": "mkdir -p migrations && cp drizzle/*.sql migrations/ 2>/dev/null || true && wrangler d1 migrations apply tuvix --local && rm -rf migrations",
    "db:reset": "tsx src/db/reset-local.ts",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "validate:cloudflare": "tsx scripts/validate-cloudflare-config.ts",
    "test:toml-substitution": "bash scripts/test-toml-substitution.sh",
    "predeploy": "pnpm validate:cloudflare && pnpm build",
    "deploy": "pnpm predeploy && bash scripts/deploy.sh",
    "create-admin": "tsx src/cli/create-admin.ts",
    "clear-articles": "tsx src/cli/clear-articles.ts",
    "migrate:public-categories": "tsx src/scripts/migrate-public-categories-to-feeds.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "email:preview": "pnpm exec email dev --dir src/services/email-templates"
  },
  "dependencies": {
    "@hono/node-server": "^1.19.6",
    "@hono/trpc-server": "^0.4.1",
    "@react-email/components": "^1.0.1",
    "@sentry/cloudflare": "^10.26.0",
    "@sentry/node": "^10.26.0",
    "@trpc/server": "^11.7.2",
    "@tuvixrss/tricorder": "workspace:*",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.4.1",
    "better-sqlite3": "^12.4.6",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "eslint-plugin-drizzle": "^0.2.3",
    "feedsmith": "^2.6.0",
    "hono": "^4.10.6",
    "node-cron": "^4.2.1",
    "react-email": "^5.0.5",
    "resend": "^6.5.2",
    "sanitize-html": "^2.17.0",
    "superjson": "^2.2.6",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251121.0",
    "@react-email/preview-server": "5.0.5",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^24.10.1",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.2.6",
    "@types/sanitize-html": "^2.16.0",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "@vitest/coverage-v8": "^4.0.13",
    "drizzle-kit": "^0.31.7",
    "eslint": "^9.39.1",
    "knip": "^5.70.1",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "tsup": "^8.5.1",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^4.0.13",
    "wrangler": "^4.50.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
