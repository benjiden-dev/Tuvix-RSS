{
  "name": "@tuvix/api",
  "version": "0.1.0",
  "type": "module",
  "description": "TuvixRSS tRPC API - Portable TypeScript backend for Docker and Cloudflare Workers",
  "main": "dist/index.js",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsx watch --env-file=.env --env-file=../../.env src/adapters/express.ts",
    "dev:workers": "wrangler dev",
    "build": "tsc",
    "start": "node dist/adapters/express.js",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "db:generate": "drizzle-kit generate",
    "db:migrate:local": "drizzle-kit migrate",
    "db:migrate:d1": "wrangler d1 migrations apply DB --remote",
    "db:migrate:d1:local": "wrangler d1 migrations apply DB --local",
    "db:studio": "drizzle-kit studio",
    "db:push": "drizzle-kit push",
    "validate:cloudflare": "tsx scripts/validate-cloudflare-config.ts",
    "predeploy": "pnpm validate:cloudflare && pnpm build",
    "deploy": "pnpm predeploy && wrangler deploy",
    "create-admin": "tsx src/cli/create-admin.ts",
    "clear-articles": "tsx src/cli/clear-articles.ts",
    "migrate:public-categories": "tsx src/scripts/migrate-public-categories-to-feeds.ts",
    "lint": "eslint src --ext .ts",
    "format": "prettier --write \"src/**/*.ts\"",
    "email:preview": "pnpm exec email dev --dir src/services/email-templates"
  },
  "dependencies": {
    "@react-email/components": "^1.0.1",
    "@sentry/cloudflare": "^8.48.0",
    "@sentry/node": "^8.48.0",
    "@trpc/server": "^11.7.1",
    "bcrypt": "^6.0.0",
    "better-auth": "^1.0.0",
    "better-sqlite3": "^12.4.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.7",
    "drizzle-zod": "^0.8.3",
    "eslint-plugin-drizzle": "^0.2.3",
    "express": "^5.1.0",
    "feedsmith": "^2.4.0",
    "jose": "^6.1.1",
    "node-cron": "^4.2.1",
    "react-email": "^5.0.4",
    "resend": "^6.4.2",
    "zod": "^4.1.12"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251111.0",
    "@react-email/preview-server": "5.0.4",
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.5",
    "@types/node": "^24.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/react": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.4",
    "@typescript-eslint/parser": "^8.46.4",
    "@vitest/coverage-v8": "^3.0.1",
    "drizzle-kit": "^0.31.6",
    "eslint": "^9.39.1",
    "knip": "^5.69.0",
    "prettier": "^3.6.2",
    "react": "^19.2.0",
    "tsx": "^4.20.6",
    "typescript": "^5.9.3",
    "vitest": "^3.0.1",
    "wrangler": "^4.47.0"
  },
  "engines": {
    "node": ">=20.0.0"
  }
}
